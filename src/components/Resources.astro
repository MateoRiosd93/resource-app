---
import recursos from "../data/resources.json";
---

<section>
    <h1 class="text-2xl text-center font-semibold mb-6">Recursos ðŸš€</h1>
    <ul class="w-full flex flex-wrap gap-4 justify-center">
        {
            recursos.data.map((resource) => (
                <article class=" py-4 px-4 border bg-purple-500/5 border-purple-500/30 rounded-sm shadow-purple-200 w-96">
                    <img
                        class="object-cover"
                        src={`/images/${resource.image}`}
